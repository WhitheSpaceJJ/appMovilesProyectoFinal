<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_degraded"
    android:orientation="vertical"
    tools:context=".RestablecerPasword">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_regresar_restablecer"
            android:layout_width="14dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/angleleftsolid2"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/hola_user"
            android:textColor="@color/white"
            android:textSize="24dp" />


    </LinearLayout>


    <EditText
        android:id="@+id/et_nueva_contrasena"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_gray"
        android:fontFamily="@font/nunito_bold"
        android:hint="@string/nueva_contrasena"
        android:padding="10dp"
        android:textColorHint="@color/gray"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_repetir_contrasena"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_gray"
        android:fontFamily="@font/nunito_bold"
        android:hint="@string/repetir_contrasena"
        android:padding="10dp"
        android:textColorHint="@color/gray"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_restablecer_contraseÃ±a"
        android:layout_width="246dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:background="@drawable/rectangle5"
        android:text="@string/restablecer"
        app:backgroundTint="@null"
        android:textAllCaps="false"
        android:textSize="18dp"/>
</LinearLayout>