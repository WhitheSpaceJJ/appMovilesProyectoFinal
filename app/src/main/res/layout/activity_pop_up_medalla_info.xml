<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_btn_200"
    android:orientation="horizontal"
    tools:context=".PopUpMedallaInfo">
    
    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_white"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/ivMedallaPopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/medalla2"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/TituloMedallaPopUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="¿ERES FLASH"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvDescripcionMedallaPopUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="¿Terminaste 5 historias en menos de una hora"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:justificationMode="inter_word"/>



    </LinearLayout>

</LinearLayout>