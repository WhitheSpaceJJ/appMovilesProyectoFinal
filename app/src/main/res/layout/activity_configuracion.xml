<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Configuracion">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/buttonRegresar"
                android:layout_width="35dp"
                android:layout_height="55dp"
                android:background="@drawable/angleleftsolid416"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ConfiguraciÃ³n"
                android:background="@color/design_default_color_on_primary"
                android:textSize="30sp"
                android:textAlignment="center"
                android:padding="8dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="50dp"
        android:padding="16dp"
        android:text="Editar"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:backgroundTint="@null"
        android:background="@drawable/roundwhite"
      />


        <Button
            android:id="@+id/buttonCambiarPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar de Perfil"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            app:backgroundTint="@null"
            android:background="@drawable/roundwhite"/>



        <Button
            android:id="@+id/buttonAyuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Ayuda"
            android:layout_marginTop="16dp"

            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="16dp"
            app:backgroundTint="@null"
            android:background="@drawable/roundwhite"/>



        <Button
            android:id="@+id/buttonCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesion"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="150dp"

            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="16dp"
            app:backgroundTint="@null"
            android:background="@drawable/roundgray"/>


</LinearLayout>