<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".RestablecerPasword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivRegresarRestablecer"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:background="@drawable/angleleftsolid2"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/txtUsuarioRestablecer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="!Hola!  Hana23"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="8dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/etNuevaContrasena"
        android:layout_width="246dp"
        android:layout_height="59dp"
        android:padding="10dp"
        android:background="@drawable/round_gray"
        android:hint="Nueva Contraseña"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textColorHint="#808080"
        android:textSize="21sp" />
    <EditText
        android:id="@+id/etNuevaContrasenaConfirmar"
        android:layout_width="246dp"
        android:layout_height="59dp"
        android:padding="10dp"
        android:background="@drawable/round_gray"
        android:hint="Repetir Contraseña"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textColorHint="#808080"
        android:textSize="21sp" />

    <Button
        android:id="@+id/btn_restablecer_contraseña"
        app:backgroundTint="@null"
        android:layout_width="300dp"
        android:layout_height="68dp"
        android:layout_marginTop="250dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button_purple"
        android:text="Checar" />
</LinearLayout>