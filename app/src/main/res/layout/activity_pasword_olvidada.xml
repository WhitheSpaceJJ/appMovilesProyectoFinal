<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_degraded"
    android:orientation="vertical"
    tools:context=".PaswordOlvidada">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivRegresarPass"
            android:layout_width="14dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/angleleftsolid2"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/perdiste_tu_contrasena"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:layout_width="241dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_regular"
            android:text="@string/desc_contrasena"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

    <EditText
        android:id="@+id/et_usuario_contra_olvidada"
        android:layout_width="252dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_gray"
        android:hint="@string/correo_electronico"
        android:padding="10dp"
        android:paddingStart="25dp"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_bold"/>


    <Button
        android:id="@+id/btn_checar"
        android:layout_width="246dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:background="@drawable/rectangle5"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/checar"
        android:textAllCaps="false"
        app:backgroundTint="@null" />
</LinearLayout>