<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_purple3"
    android:orientation="vertical"
    android:scrollbarThumbHorizontal="@android:drawable/presence_online"
    tools:context=".Actividad">

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:src="@drawable/cerrarmorado" />

        <SeekBar
            style="@android:style/Widget.Material.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:max="6"
            android:progress="2"
            android:progressBackgroundTint="@color/purple_rnd_300"
            android:progressTint="@color/purple_rnd_300"
            android:thumb="@android:drawable/presence_online" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Deletrea la palabra"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="409dp"
        android:layout_height="350dp"
        android:src="@drawable/game1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-90dp"
        android:background="@drawable/round_purple2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:text="¿Qué trasporte usaron Annie y sus amigos para llegar a la ciudad de Redwall?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_white">

            <TextView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_green2"
                android:gravity="center"
                android:text="T"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_white"
                android:gravity="center"
                android:text="R"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_white"
                android:gravity="center"
                android:text="E"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_white"
                android:gravity="center"
                android:text="N"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_button_purple_ch"
                android:gravity="center"
                android:text="A"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_purple2"
                android:gravity="center"
                android:text="R"
                android:textColor="@color/purple_btn_200"
                android:textSize="25sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_button_purple_ch"
                android:gravity="center"
                android:text="E"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_button_purple_ch"
                android:gravity="center"
                android:text="N"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_button_purple_ch"
                android:gravity="center"
                android:text="T"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_button_purple_ch"
                android:gravity="center"
                android:text="R"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_button_purple_ch"
                android:gravity="center"
                android:text="E"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_button_purple_ch"
                android:gravity="center"
                android:text="N"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <Button
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/green_btn_200"
            android:layout_marginTop="28dp"
            android:layout_marginStart="192dp"
            android:text="Siguiente >"
            android:textSize="23sp"/>


    </LinearLayout>


</LinearLayout>