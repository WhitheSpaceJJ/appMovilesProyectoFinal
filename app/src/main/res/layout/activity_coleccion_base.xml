<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ColeccionBase">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttonRegresar"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/regresarmorado"
            android:padding="8dp" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/design_default_color_on_primary"
            android:text="Coleccionables"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/design_default_color_on_primary"
            android:text="33/80"
            android:textAlignment="center"
            android:textSize="22sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/invierno"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/inviernotemporada"
                android:drawableTop="@drawable/mask"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressbarInvierno"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="250dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/progress_bar" />

                <TextView
                    android:id="@+id/txtTotalInvierno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/design_default_color_on_primary"
                    android:text="3/10"
                    android:textAlignment="textEnd"
                    android:textSize="22sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/otono"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/otonotemporada"
                android:drawableTop="@drawable/mask"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressbarOtono"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="250dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/progress_bar" />

                <TextView
                    android:id="@+id/txtTotalOtono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/design_default_color_on_primary"
                    android:text="3/10"
                    android:textAlignment="textEnd"
                    android:textSize="22sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/primavera"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/primaveratemporada"
                android:drawableTop="@drawable/mask"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressbarPrimavera"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="250dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/progress_bar" />

                <TextView
                    android:id="@+id/txtTotalPrimavera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/design_default_color_on_primary"
                    android:text="3/10"
                    android:textAlignment="textEnd"
                    android:textSize="22sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/primavera2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/primaveratemporada"
                android:drawableTop="@drawable/mask"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressbarPrimavera2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="250dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/progress_bar" />

                <TextView
                    android:id="@+id/txtTotalPrimavera2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/design_default_color_on_primary"
                    android:text="3/10"
                    android:textAlignment="textEnd"
                    android:textSize="22sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>