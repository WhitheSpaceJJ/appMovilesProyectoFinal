<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".Faq">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/buttonRegresar"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:background="@drawable/angleleftsolid416"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Preguntas Frecuentes"
            android:background="@color/design_default_color_on_primary"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="8dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginTop="32dp"
       android:layout_marginRight="50dp"
       android:layout_marginLeft="50dp"

       >
       <Button
           android:id="@+id/buttonCantidadPerfiles"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Â¿Cuantos Perfiles puedo crear en TOFI? "
           android:textColor="@color/black"
           android:textSize="18sp"
           app:backgroundTint="@null"
           android:onClick="onClick"
           android:background="@drawable/round_white"
           />
       <TextView
           android:id="@+id/minitextviewPerfiles"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/faqCantidadPerfiles"
           android:visibility="invisible"
           android:layout_gravity="center"
           android:layout_below="@+id/myButton"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        >
        <Button
            android:id="@+id/buttonOlvideUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Olvide mi nombre de usuario"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_white"
            />
        <TextView
            android:id="@+id/minitextviewOlvide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faqOlvideUsuario"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_below="@+id/myButton"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        >
        <Button
            android:id="@+id/buttonCambioIcono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Quiero Cambiar el Icono de mi Perfil"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_white"
            />
        <TextView
            android:id="@+id/minitextviewCambio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faqCambiarIcono"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_below="@+id/myButton"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        >
        <Button
            android:id="@+id/buttonSinImagenes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="No puedo ver las imagenes de las historias"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_white"
            />
        <TextView
            android:id="@+id/minitextviewSinImagenes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faqSinImagen"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_below="@+id/myButton"/>
    </LinearLayout>







</LinearLayout>