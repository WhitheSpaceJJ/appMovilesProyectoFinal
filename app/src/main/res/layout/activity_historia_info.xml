<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HistoriaInfo">
   <RelativeLayout
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/imageView1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="50dp"
          android:src="@drawable/historiainfo" />

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="55dp"
          android:layout_height="55dp"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:src="@drawable/angleleftsolid2" />

      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_alignRight="@+id/imageView1"
          android:layout_alignBottom="@+id/imageView1"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="183dp"
          android:layout_marginEnd="116dp"
          android:layout_marginRight="131dp"
          android:layout_marginBottom="-37dp"
          android:src="@drawable/group26" />

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_alignRight="@+id/imageView1"
          android:layout_alignBottom="@+id/imageView1"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="38dp"
          android:layout_marginBottom="-36dp"
          android:src="@drawable/group27" />

   </RelativeLayout>
<TextView
    android:layout_width="match_parent" android:textSize="35sp"
    android:textStyle="bold"
    android:layout_height="wrap_content"   android:layout_marginTop="15dp"
    android:text="Click"  android:layout_marginLeft="30dp"
    android:id="@+id/tituloHistoria"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_marginLeft="30dp"
       android:textStyle="bold"
       android:layout_height="wrap_content"
       android:text="Kayla Miller"   android:layout_marginTop="25dp"
       android:id="@+id/autor"/>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="25dp"  android:textStyle="bold"
       android:text="192 paginas"  android:layout_marginLeft="30dp"
       android:id="@+id/totalPaginas"/>
   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"   android:layout_marginTop="25dp"
       android:layout_marginRight="20dp"
      >

      <TableRow>

         <TextView
             android:id="@+id/textView1"
             android:layout_width="0dp"
             android:layout_height="40dp"
             android:paddingTop="7dp"
             android:layout_weight="1" android:layout_gravity="center"
             android:layout_margin="4dp" android:textAlignment="center"
             android:text="Ficcion"
             android:background="@drawable/round_gray"/>

         <TextView
             android:id="@+id/textView2"
             android:layout_width="0dp"
             android:layout_height="40dp"   android:paddingTop="7dp"
             android:layout_weight="1" android:textAlignment="center"
             android:layout_margin="4dp"
             android:text="Popular" android:layout_gravity="center"
             android:background="@drawable/round_gray"/>

         <TextView
             android:id="@+id/textView3"
             android:layout_width="0dp"     android:paddingTop="7dp"
             android:layout_height="40dp"
             android:layout_weight="1" android:textAlignment="center"
             android:layout_margin="4dp"
             android:text="Amistad" android:layout_gravity="center"
             android:background="@drawable/round_gray"/>

      </TableRow>

      <TableRow>

         <TextView
             android:id="@+id/textView4"
             android:layout_width="0dp"
             android:layout_height="40dp"
             android:layout_weight="1"     android:paddingTop="7dp"
             android:layout_margin="4dp" android:textAlignment="center"
             android:text="Novela" android:layout_gravity="center"
             android:background="@drawable/round_gray"/>

         <TextView
             android:id="@+id/textView5"
             android:layout_width="0dp"   android:paddingTop="7dp"
             android:layout_height="40dp"
             android:layout_weight="1" android:textAlignment="center"
             android:layout_margin="4dp"
             android:text="Arte" android:layout_gravity="center"
             android:background="@drawable/round_gray"/>

         <TextView
             android:id="@+id/textView6"
             android:layout_width="0dp"
             android:layout_height="40dp"   android:paddingTop="7dp"
             android:layout_weight="1"
             android:layout_margin="4dp" android:textAlignment="center"
             android:layout_gravity="center"
             android:text="Escolar"
             android:background="@drawable/round_gray"/>

      </TableRow>
   </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="Todo el mundo busca su lugar, y Olivia quiere encontrar el suyo. Olivia cree encajar con todos sus compañeros, hasta que un dia se da cuenta que la realidad no es asi. Con la actuacion acercandose a cada minuto, ¿podrá encontrar Olivia su propio lugar en el espactaculo antes de que suba el telón?"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
/>
</LinearLayout>