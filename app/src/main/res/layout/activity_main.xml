<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_purple"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="362dp"
        android:layout_height="228dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="45dp" />


    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="252dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:hint="Usuario"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="284dp">

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="249dp"
            android:layout_height="53dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#000000"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="255dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:hint="Contraseña"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="349dp">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="249dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="151dp"
        android:layout_height="48dp"
        android:button="@android:drawable/checkbox_off_background"
        android:buttonTint="#DAD8D8"
        android:text=" Recordar Usuario"
        android:layout_gravity="center"
        android:textColor="#F6F6F6"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="440dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="210dp"
        android:layout_height="53dp"
        android:text=" ¿Olvidaste tu contraseña?"
        android:layout_gravity="center"
        android:textColor="#FFD57F"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="417dp" />



    <Button
        android:id="@+id/button"
        android:layout_width="207dp"
        android:layout_height="72dp"
        android:background="@drawable/round_button_green"
        android:text="Iniciar Sesión"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        app:backgroundTint="@null"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="532dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="206dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button_purple"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Registrarse"
        app:backgroundTint="@null"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="614dp" />

</LinearLayout>