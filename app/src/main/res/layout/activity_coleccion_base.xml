<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ColeccionBase">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/buttonRegresar"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/regresarmorado"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Colleccionables"
            android:background="@color/design_default_color_on_primary"
            android:textSize="30sp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="33/80"
            android:background="@color/design_default_color_on_primary"
            android:textSize="26sp"
            android:textAlignment="center"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imagenbiblioteca"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/inviernotemporada"
        android:drawableTop="@drawable/mask"
        android:layout_margin="25dp"
        android:scaleType="fitCenter"
        />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/progress_bar"/>
    <TextView
        android:id="@+id/txtTotalColeccionable"
        android:layout_width="wrap_content"
        android:paddingLeft="18dp"
        android:layout_height="wrap_content"
        android:text="33/80"
        android:background="@color/design_default_color_on_primary"
        android:textSize="26sp"
        android:textAlignment="center"
        />
</LinearLayout>

</LinearLayout>