<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".PaswordOlvidada">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/buttonRegresar"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:background="@drawable/angleleftsolid2"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Configuración"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="8dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtsubtitulo"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="¡No te preocupes! Escribe tu usuario para recuperarla"
        android:textColor="@color/white"
        android:textSize="24sp"
       />
    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:background="@drawable/round_gray"
        android:hint="Usuario"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textColorHint="#808080"
        android:textSize="21sp" />


    <Button
        android:id="@+id/btn_checar"
        app:backgroundTint="@null"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="250dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button_purple"
        android:text="Checar" />
</LinearLayout>