<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Perfil">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:gravity=""
            android:text="Perfil"

            android:textSize="30sp" />


        <ImageView
            android:id="@+id/img_configuracion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/configuracinmorado" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="290dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_blue"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPerfilImagen"
                android:layout_width="240dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/perfilfull1" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/round_darkblue"
                android:text="@string/nom_perfil"
                android:id="@+id/tvNombreUsuarioPerfil"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />


        </LinearLayout>

    </LinearLayout><!--"fin perfil grande"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_margin="25dp"
            android:background="@drawable/round_light_yellow"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/medallasPerfil"
                android:layout_width="100dp"
                android:layout_height="158dp"
                android:layout_gravity="center"
                android:src="@drawable/medallas1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/round_dark_yellow"
                android:text="Medallas"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_margin="25dp"
            android:background="@drawable/round_light_blue"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coleccionablesPerfil"
                android:layout_width="100dp"
                android:layout_height="158dp"
                android:layout_gravity="center"
                android:src="@drawable/diamante" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/round_blue_medium"
                android:text="Coleccionables"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout><!--"fin layout"-->
