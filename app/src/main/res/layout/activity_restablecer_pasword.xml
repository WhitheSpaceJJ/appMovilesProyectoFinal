<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical"
    tools:context=".RestablecerPasword">


    <ImageView
        android:id="@+id/ivRegresarRestablecer"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/angleleftsolid2"
        android:padding="8dp" />

    <TextView
        android:id="@+id/txtUsuarioRestablecer"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="!Hola!  Hana23"
        android:textAlignment="center"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/etNuevaContrasena"
        android:layout_width="246dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_gray"
        android:hint="Nueva Contraseña"
        android:padding="10dp"
        android:textColorHint="#808080"
        android:textSize="21sp" />

    <EditText
        android:id="@+id/etNuevaContrasenaConfirmar"
        android:layout_width="246dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_gray"
        android:hint="Repetir Contraseña"
        android:padding="10dp"
        android:textColorHint="#808080"
        android:textSize="21sp" />

    <Button
        android:id="@+id/btn_restablecer_contraseña"
        android:layout_width="246dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:background="@drawable/round_button_purple"
        android:text="Checar"
        app:backgroundTint="@null" />
</LinearLayout>