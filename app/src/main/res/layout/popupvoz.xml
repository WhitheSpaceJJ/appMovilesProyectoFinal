<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/purple_200"
     >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="28sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/light_text"
                android:text="Escuchar Historia"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="28sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/light_text"
                android:text="Lectura Guiada"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/escuhar"
            android:contentDescription="Escuchar Historia"
            app:backgroundTint="@null"
            android:background="@drawable/switchon"
         />
        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:gravity="center"
            app:backgroundTint="@null"
            android:layout_marginTop="40dp"
            android:id="@+id/lectura"
            android:contentDescription="Lectura Guiada"
            android:background="@drawable/switchoff"
           />
    </LinearLayout>
</LinearLayout>