<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Perfiles">
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perfiles"
        android:background="@color/design_default_color_on_primary"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_margin="8dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        >

        <TableRow
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_margin="15dp"    android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            >
            <Button
                android:id="@+id/perfil1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/perfiloficial1"
                android:text="Perfil 1"
                android:drawableTop="@drawable/perfil1"
                android:backgroundTint="@null"
            />
            <Button
                android:id="@+id/perfil2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/perfiloficial2"
                android:text="Perfil 2"
                android:drawableTop="@drawable/perfil2"
                android:backgroundTint="@null"
                />

        </TableRow>

        <TableRow
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_margin="15dp"
            >
            <Button
                android:id="@+id/perfil3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/perfiloficial3"
                android:text="Perfil 3"
                android:drawableTop="@drawable/perfil3"
                android:backgroundTint="@null"
                />

            <Button
                android:id="@+id/btn_agregarPerfil"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@drawable/round_button_purple"
                android:text="Agregar Perfil"
                android:drawableTop="@drawable/perfil2"
                android:backgroundTint="@null"
                />

        </TableRow>

    </TableLayout>

</LinearLayout>